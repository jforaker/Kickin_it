<%= form_for(@kick) do |f| %>
    <% if @kick.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@kick.errors.count, "error") %> prohibited this location from being saved:</h2>

          <ul>
            <% @kick.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="form-group">
      <%= f.text_field :title, class: "form-control", :placeholder => "Title" %>
    </div>
    <div class="form-group">
      <%= f.text_field :description, class: "form-control",:placeholder => "Whats happening?"  %>
    </div>
    <div class="form-group">
      <%= f.text_field :time, class: "form-control", :placeholder => "What time?"  %>
    </div>
    <div class="form-group">
      <%= f.text_field :location, class: "form-control"  %>
    </div>
    <div class="form-group">
      <%= f.text_field :latitude, class: "form-control",:placeholder => "lat"  %>
    </div>
    <div class="form-group">
      <%= f.text_field :longitude, class: "form-control", :placeholder => "lng"  %>
    </div>

    <div class="actions">
      <%= f.submit class: "btn btn-large btn-block btn-info" %>
    </div>
<% end %>

