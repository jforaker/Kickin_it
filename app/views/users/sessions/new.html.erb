<h2>Sign in to Kickin It</h2>

<div class="login-form">
  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
      <div class="form-group">
        <%= f.email_field :email, :autofocus => true, class: "form-control login-field" , :placeholder => "Email"%>
      </div>

      <div class="form-group">
        <%= f.password_field :password, class: "form-control login-field", :placeholder => "Password" %>
      </div>

      <% if devise_mapping.rememberable? -%>
          <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
      <% end -%>

      <div><%= f.submit "Sign in" , class: "btn btn-primary btn-lg btn-block"%></div>
  <% end %>
</div>

<%= render "users/shared/links" %>
